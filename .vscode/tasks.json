{
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceFolder}",
		"env": {
			"DEVICE": "${config:project.target.device}",
			"CROSS_COMPILE": "${config:project.toolchain.path}/bin/arm-none-eabi-",
		}
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": false,
		"clear": false
	},
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "c",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make clean",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		}
	]
}
